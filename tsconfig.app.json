{
	"compilerOptions": {
		"composite": true,
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"types": [
			"vite/client"
		],
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src"
	]
}
